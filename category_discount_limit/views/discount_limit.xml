<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="discount_session_form">
        <field name="name">Discount Session</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='stop_at']" position="after">
                <field name="limit_discount"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="discount_category_form">
        <field name="name">Discount Category</field>
        <field name="model">pos.category</field>
        <field name="inherit_id" ref="point_of_sale.product_pos_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence']" position="after">
                <field name="apply_limit" invisible="1"/>
                <field name="discount" attrs="{'invisible': [('apply_limit', '=', False)]}"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="discount_category_tree">
        <field name="name">Discount Category</field>
        <field name="model">pos.category</field>
        <field name="inherit_id" ref="point_of_sale.product_pos_category_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="apply_limit" invisible="1"/>
                <field name="discount" attrs="{'invisible': [('apply_limit', '!=', True)]}"/>
            </xpath>
        </field>
    </record>
    <record id="pos_config_discount_limit_form_view_inherit" model="ir.ui.view">
        <field name="name">pos.config.discount.limit.form.view.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pricing']" position="inside">
                <div class="col-xs-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="discount_limit"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="discount_limit"/>
                        <div class="text-muted">
                            Apply Discounts To Category
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>