<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='ecom_uom_price_option_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="ecom_product_bom_cart_setting">
                    <div class="o_setting_right_pane">
                        <label for="product_ids"/>
                        <span class="fa fa-lg fa-globe" title="Values set here are website-specific."
                              groups="website.group_multi_website"/>
                        <div class="text-muted">
                            Add products to see the BOM in cart description
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="product_ids" widget="many2many_tags"/>
                            </div>

                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>


</odoo>