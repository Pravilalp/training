    <!-- form view-->

    <record model="ir.ui.view" id="view_vehicle_form">
        <field name="name">travel.vehicle.form</field>
        <field name="model">travel.vehicle</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="registration_no"/>
                            <field name="vehicle_name"/>
                        </group>
                        <group>
                            <field name="vehicle_type"/>
                            <field name="no_of_seats"/>
                            <field name="facilities" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Vehicle Charges" name="vehicle_charges_line">
                            <field name="vehicle_charges_line_ids">
                                <tree name="vehicle_charges_line_tree" editable="bottom">
                                    <field name="service_id"/>
                                    <field name="quantity"/>
                                    <field name="unit"/>
                                    <field name="price"/>

                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!--        travel view-->
    <record id="customer_action2" model="ir.actions.act_window">
        <field name="name">Vehicle</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">travel.vehicle</field>
        <field name="view_mode">tree,form,kanban</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your own vehicle type
            </p>
        </field>
    </record>

    <!--configuration menu-->

    <menuitem id="travel_customer_vehicle"
              name="Vehicle"
              parent="travel_customer_configuration"
              action="customer_action2"
              sequence="20"/>
</odoo>