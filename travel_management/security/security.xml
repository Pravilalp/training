<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_travel">
        <field name="name">Travel Management</field>
        <field name="sequence">15</field>
    </record>

    <record model="res.groups" id="group_travel_user">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_travel"/>
    </record>

    <record model="res.groups" id="group_travel_manager">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_travel"/>
        <field name="implied_ids" eval="[(4, ref('group_travel_user'))]"/>

    </record>

    <record id="records_user" model="ir.rule">
        <field name="name">User can only see his / her</field>
        <field name="model_id" ref="model_travel_customer"/>
        <field name="groups" eval="[(4, ref ('group_travel_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="domain_force">['|', ('customer_id', '=', user.partner_id.id), ('company_id', 'in', company_ids)]
        </field>
    </record>


</odoo>