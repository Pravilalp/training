<?xml version="1.0"?>
<odoo>
    <record id="view_travel_customer_report_form" model="ir.ui.view">
        <field name="name">report.wizard.form</field>
        <field name="model">report.wizard</field>
        <field name="arch" type="xml">
            <form string="Travel Management Report">
                <group class="oe_title">
                    <field name="travel_start_date"/>
                    <field name="travel_end_date"/>
                    <field name="customer_id"/>
                </group>
                <footer>
                    <button name="action_travel_customer_report" string="PDF Report" type="object" class="btn-primary"/>
                    <button name="action_excel_customer_report" string="XLS Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_travel_report" model="ir.actions.act_window">
        <field name="name">Travel Management Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_travel_customer_report_form"/>
        <field name="target">new</field>
    </record>

</odoo>
